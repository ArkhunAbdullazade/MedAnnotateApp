@model MedAnnotateApp.Presentation.Dtos.LoginDto

@{
    ViewBag.Title = $"Login";
}

<style>
    .centered {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 600px;
    }

    input:focus {
        border-color: #d78188 !important;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px #d78188 !important;
        outline: 0 none !important;
    }
</style>

<section class="centered">
    <div class="px-4 py-5 px-md-5 text-lg-start"
        style="width: 1100px;height: 500px;background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight text-center" style="color: #a9000e;">
                        Welcome
                    </h1>
                    <p style="color:rgb(122, 122, 122)">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                        quibusdam tempora at cupiditate quis eum maiores libero
                        veritatis? Dicta facilis sint aliquid ipsum atque?
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                        quibusdam tempora at cupiditate quis eum maiores libero
                        veritatis? Dicta facilis sint aliquid ipsum atque?
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form method="post" asp-action="Login" asp-controller="Identity">
                                <div class="text-danger" asp-validation-summary="All"></div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="email" asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="form-label text-dark">Institutional Email</span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="password" asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="form-label text-dark">Password</span>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init
                                    class="btn btn-block mb-4" style="color: white; background-color: #a9000e;">
                                    Sign In
                                </button>

                                <p>Not a member? <a asp-controller="Identity" asp-action="Signup" style="color: #a9000e;">Sign Up</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}