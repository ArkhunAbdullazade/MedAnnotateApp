@model MedAnnotateApp.Presentation.Dtos.LoginDto

@{
    ViewBag.Title = "Login";
}

<style>
    /* Main layout and containers */
    .centered {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 680px; /* Account for navbar height */
        padding: 10px 0;
    }

    .form-container {
        padding: 12px 20px !important;
        height: 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow-y: auto;
    }

    /* Form styling */
    form {
        width: 100%;
        max-width: 450px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Form controls styling */
    .form-control,
    .form-outline select,
    .form-outline input {
        box-sizing: border-box;
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        transition: all 0.2s ease;
        font-size: 15px;
        margin-bottom: 12px;
    }
    
    /* Row spacing for grouped inputs */
    form .row {
        margin-bottom: 0;
        width: 100%;
        display: flex;
        margin-left: 0;
        margin-right: 0;
    }
    
    form .row .form-control {
        margin-bottom: 12px; /* Match single inputs */
        width: 100%;
    }
    
    /* Adjust spacing between columns in a row */
    form .row .col-md-6 {
        padding-left: 0;
        padding-right: 0;
    }
    
    form .row .col-md-6:first-child {
        padding-right: 6px;
    }
    
    form .row .col-md-6:last-child {
        padding-left: 6px;
    }
    
    /* Error summary styling */
    .validation-summary-errors {
        display: block !important;
        max-height: 120px;
        overflow-y: auto;
        color: #dc3545 !important;
        font-size: 14px;
        margin-bottom: 12px;
        padding: 10px 12px;
        border-radius: 6px;
        background-color: rgba(220, 53, 69, 0.15);
        width: 100%;
        border-left: 4px solid #dc3545;
    }
    
    .validation-summary-errors ul {
        margin-bottom: 0;
        padding-left: 20px;
    }
    
    .validation-summary-errors ul li {
        margin-bottom: 4px;
    }
    
    .validation-summary-valid {
        display: none !important;
    }
    
    /* Additional style to ensure the validation summary is hidden */
    div[asp-validation-summary="All"]:not(.validation-summary-errors) {
        display: none !important;
    }
    
    .text-danger:empty {
        display: none !important;
    }
    
    /* Focus states */
    input:focus,
    select:focus {
        border-color: #b96b74 !important;
        box-shadow: 0 0 0 3px rgba(217, 107, 119, 0.2) !important;
        outline: 0 none !important;
    }

    /* Submit button styling */
    .btn-submit {
        padding: 8px 20px;
        border: none;
        color: white;
        background-color: #a9000e;
        cursor: pointer;
        width: auto;
        border-radius: 6px;
        font-size: 16px;
        font-weight: 500;
        transition: all 0.2s ease;
        min-width: 150px;
        margin-top: 5px; /* Restore to 5px */
    }

    .btn-submit:hover {
        background-color: #8f000c;
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    
    .btn-submit:active {
        transform: translateY(0);
    }
    
    /* Card styling */
    .welcome-card {
        background: linear-gradient(145deg, #f8f9fa, #ffffff);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        height: 400px;
    }
    
    .welcome-column {
        background-color: #f8f9fa;
        border-radius: 8px 0 0 8px;
        height: 400px;
        padding: 30px !important;
        display: flex;
        align-items: center;
    }
    
    /* Form column */
    .form-column {
        background-color: #ffffff;
        height: 400px;
        overflow-y: auto; /* Allow scrolling when needed */
    }
    
    /* App branding */
    .brand-color {
        color: #a9000e !important;
    }
    
    .brand-title {
        font-weight: 700;
        letter-spacing: -1px;
    }
    
    /* Welcome text */
    .welcome-text {
        line-height: 1.5;
        font-size: 15px;
        color: rgb(100, 100, 100);
    }
    
    /* Register link */
    .register-link {
        font-size: 14px;
        margin-top: 15px;
        margin-bottom: 0;
        width: 100%;
        text-align: center;
    }

    /* Field validation errors */
    .field-validation-error {
        display: none !important;
    }
</style>

<section class="centered">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-11">
                <div class="card shadow-lg p-0 welcome-card">
                    <div class="row g-0 h-100">
                        <div class="col-md-7 welcome-column">
                            <div>
                                <h1 class="display-5 fw-bold ls-tight text-center brand-title brand-color">
                                    Welcome Back
                                </h1>
                                <p class="mt-3 welcome-text">
                                    Sign in to your account to continue your work on our medical annotation platform. 
                                    Your contributions help improve healthcare technology and patient outcomes through 
                                    accurate image annotation and collaborative research.
                                </p>
                                
                                <div class="text-center mt-4">
                                    <a href="/Identity/Signup" class="btn btn-outline-secondary">
                                        Create New Account
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5 form-column">
                            <div class="card-body form-container">
                                <form method="post" asp-action="PostLogin" asp-controller="Identity" class="mb-0">
                                    <h4 class="mb-3 text-center">Login</h4>
                                    
                                    <div class="mb-3 w-100">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>

                                    <div class="w-100">
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Institutional Email (stanford.edu or mountsinai.org)" required />
                                    </div>

                                    <div class="w-100">
                                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required />
                                    </div>

                                    <button type="submit" class="btn-submit">
                                        Login
                                    </button>
                                    
                                    <p class="register-link">
                                        Not a member? <a href="/Identity/Signup" class="brand-color" style="text-decoration: none; font-weight: 500;">Register</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}