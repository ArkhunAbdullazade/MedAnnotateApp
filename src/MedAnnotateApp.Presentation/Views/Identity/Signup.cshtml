@model MedAnnotateApp.Presentation.Dtos.SignupDto

@{
    ViewBag.Title = "Registration";

    var specialities = ViewBag.Specialities as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<style>
    .centered {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 680px;
    }

    .centered-form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        max-width: 100%; /* Prevents form elements from pushing out horizontally */
    }

    .form-control,
    .form-outline select,
    .form-outline input {
        box-sizing: border-box;
        width: 100%;
    }

    .button:hover {
        background-color: #8f000c;
    }

    input:focus,
    select:focus {
        border-color: #d78188 !important;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px #d78188 !important;
        outline: 0 none !important;
    }

    /* Ensures the card doesn't overflow */
    .form-container {
        max-height: 100%;
        overflow-y: auto; /* Adds scroll if needed */
    }

    .text-danger {
        max-height: 100px; /* Set a fixed height for the error container */
        overflow-y: auto   ; /* Enable vertical scrolling */
    }
</style>

<section class="centered">
   <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-11">
                <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                    <div class="row">
                        <div class="col-md-6 d-flex align-items-center " style="height: 580px;">
                            <div>
                                <h1 class="display-3 fw-bold ls-tight text-center" style="color: #a9000e;">
                                    Welcome
                                </h1>
                                <p class="mt-4" style="color:rgb(122, 122, 122)">
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                    Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                                    quibusdam tempora at cupiditate quis eum maiores libero
                                    veritatis? Dicta facilis sint aliquid ipsum atque?
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                    Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                                    quibusdam tempora at cupiditate quis eum maiores libero
                                    veritatis? Dicta facilis sint aliquid ipsum atque?
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card shadow-sm p-4 form-container" style="background-color: #ffffff; height: 580px;">
                                <div class="card-body centered-form">
                                    <form method="post" asp-action="PostSignup" asp-controller="Identity">
                                        <div class="text-danger" asp-validation-summary="All"></div>

                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="email" asp-for="Email" class="form-control" />
                                                    <span asp-validation-for="Email" class="form-label text-dark">Institutional Email</span>
                                                </div>

                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="text" asp-for="FullName" class="form-control" />
                                                    <span asp-validation-for="FullName" class="form-label text-dark">Full Name</span>
                                                </div>

                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="password" asp-for="Password" class="form-control" />
                                                    <span asp-validation-for="Password" class="form-label text-dark">Password</span>
                                                </div>

                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                                                    <span asp-validation-for="ConfirmPassword" class="form-label text-dark">Confirm Your Password</span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="text" asp-for="University" class="form-control" />
                                                    <span asp-validation-for="University" class="form-label text-dark">University</span>
                                                </div>

                                                <div class="form-outline mb-2">
                                                    <select asp-for="Position" class="form-control">
                                                        <option disabled selected value="">Select Position</option>
                                                        <option value="medical student">Medical Student</option>
                                                        <option value="clinician">Clinician</option>
                                                    </select>
                                                    <span asp-validation-for="Position" class="text-dark">Position</span>
                                                </div>

                                                <div class="form-outline mb-2">
                                                    <select asp-for="Speciality" class="form-control">
                                                        <option disabled selected value="">Select Specialty</option>
                                                        @foreach (var speciality in specialities)
                                                        {
                                                            <option value="@speciality">@speciality</option>
                                                        }
                                                    </select>
                                                    <span asp-validation-for="Speciality" class="text-dark">Specialty</span>
                                                </div>

                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="number" asp-for="ClinicalExperience"  min="0" class="form-control" />
                                                    <span asp-validation-for="ClinicalExperience" class="form-label text-dark">Years Of Clinical Experience</span>
                                                </div>

                                                <div data-mdb-input-init class="form-outline mb-2">
                                                    <input type="text" asp-for="OrcidId" class="form-control" />
                                                    <span asp-validation-for="OrcidId" class="form-label text-dark">ORCID ID (optional)</span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Submit button -->
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init
                                            class="btn btn-block mb-4" style="color: white; background-color: #a9000e;">
                                            Sign Up
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}