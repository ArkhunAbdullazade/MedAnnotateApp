<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedAnnotateApp.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedAnnotateApp.Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 2rem; font-weight:500;color: #a9000e;">Med Annotation App</a>
                <div class="navbar-collapse collapse d-sm-inline-flex ms-auto">
                    @* <div class="form-inline my-lg-0 ms-auto">
                        <img src="~/images/bmir-logo.png" alt="Logo" width="50" height="50" />
                        <img src="~/images/stanford-medicine-logo.png" alt="Logo" width="40" height="40"/>
                        <img src="~/images/stanford-university-logo.png" alt="Logo" width="35" height="35" />
                    </div> *@
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
